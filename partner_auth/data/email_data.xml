<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="email_forget_password" model="mail.template">
            <field name="name">Auth Directory: Reset Password</field>
            <field name="email_from">noreply@example.org</field>
            <field name="subject">Reset Password</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="model_partner_auth" />
            <field name="auto_delete" eval="True" />
            <field name="lang">fr_FR</field>
            <field name="body_html" type="html">
                <div>
                Hi ${object.partner_id.name},
                Click on the following link to reset your password
                <a
                        href="https://example.org/password/reset?token=${object.env.context['token']}"
                        target="_blank"
                        style="color:#FFFFFF; text-decoration:none;"
                    >Reset Password</a>
                </div>
            </field>
        </record>

        <record id="email_invite_set_password" model="mail.template">
            <field name="name">Auth Directory: Set Password</field>
            <field name="email_from">noreply@example.org</field>
            <field name="subject">Welcome</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="model_id" ref="model_partner_auth" />
            <field name="auto_delete" eval="True" />
            <field name="lang">fr_FR</field>
            <field name="body_html" type="html">
                <div>
                Hi ${object.partner_id.name},
                Welcome, your account have been created
                Click on the following link to set your password
                <a
                        href="https://example.org/password/reset?token=${object.env.context['token']}"
                        target="_blank"
                        style="color:#FFFFFF; text-decoration:none;"
                    >Set Password</a>
                </div>
            </field>
        </record>
    </data>
</odoo>
