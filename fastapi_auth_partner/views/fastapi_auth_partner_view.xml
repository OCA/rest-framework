<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="fastapi_auth_partner_view_tree" model="ir.ui.view">
        <field name="model">fastapi.auth.partner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="directory_id" />
                <field name="partner_id" />
                <field name="login" />
                <field name="nbr_pending_reset_sent" />
                <field name="date_last_request_reset_pwd" />
                <field name="date_last_sucessfull_reset_pwd" />
            </tree>
        </field>
    </record>

    <record id="fastapi_auth_partner_view_form" model="ir.ui.view">
        <field name="model">fastapi.auth.partner</field>
        <field name="arch" type="xml">
            <form string="Auth Partner">
                <header>
                    <button
                        name="local_impersonate"
                        type="object"
                        string="Local Impersonate"
                        class="btn-secondary"
                        groups="base.group_no_one"
                    />
                    <button
                        name="impersonate"
                        type="object"
                        string="Impersonate"
                        class="btn-info"
                        attrs="{'invisible': [('user_can_impersonate', '=', False)]}"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="user_can_impersonate" invisible="1" />
                            <field name="partner_id" />
                        </h1>
                    </div>
                    <group>
                        <field name="login" />
                        <field name="directory_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fastapi_auth_partner_view_search" model="ir.ui.view">
        <field name="model">fastapi.auth.partner</field>
        <field name="arch" type="xml">
            <search string="Auth Partner">
                <field name="directory_id" />
                <field name="partner_id" />
                <group expand="0" string="Group By">
                    <filter
                        string="Directory"
                        name="directory"
                        domain="[]"
                        context="{'group_by':'directory_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="fastapi_auth_partner_action">
        <field name="name">Partner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fastapi.auth.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="fastapi_auth_partner_view_search" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="fastapi_auth"
        parent="fastapi.menu_fastapi_root"
        sequence="50"
        name="Authentication"
    />

    <menuitem
        id="fastapi_auth_partner_menu"
        parent="fastapi_auth"
        sequence="10"
        action="fastapi_auth_partner_action"
    />

</odoo>
