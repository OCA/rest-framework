<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="fastapi_auth_directory_view_tree" model="ir.ui.view">
        <field name="model">fastapi.auth.directory</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="fastapi_auth_directory_view_form" model="ir.ui.view">
        <field name="model">fastapi.auth.directory</field>
        <field name="arch" type="xml">
            <form string="Directory Auth">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            class="oe_stat_button"
                            name="%(fastapi_auth_partner_action)d"
                            icon="fa-user"
                            type="action"
                            context="{'default_directory_id': active_id, 'search_default_directory_id': active_id}"
                        >
                        <field name="count_partner" />
                            Account
                        </button>
                    </div>
                   <div class="oe_title">
                       <h1>
                           <field name="name" readonly="1" />
                       </h1>
                   </div>
                   <group name="config">
                       <group name="main">
                           <field name="request_reset_password_template_id" />
                           <field name="invite_set_password_template_id" />
                           <field name="cookie_secret_key" />
                           <field name="cookie_duration" />
                           <field name="set_password_token_duration" />
                        </group>
                   </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fastapi_auth_directory_view_search" model="ir.ui.view">
        <field name="model">fastapi.auth.directory</field>
        <field name="arch" type="xml">
            <search string="Directory Auth">
                <field name="name" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="fastapi_auth_directory_action">
        <field name="name">Directory</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fastapi.auth.directory</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="fastapi_auth_directory_view_search" />
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="fastapi_auth_directory_menu"
        parent="fastapi_auth"
        sequence="10"
        action="fastapi_auth_directory_action"
    />

</odoo>
