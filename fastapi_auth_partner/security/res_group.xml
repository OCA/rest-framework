<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="group_partner_auth_manager" model="res.groups">
        <field name="name">FastAPI Partner Auth Manager</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
    </record>

    <record id="group_partner_auth_api" model="res.groups">
        <field name="name">API Partner Auth access</field>
        <field name="category_id" ref="base.module_category_hidden" />
        <field
            name="implied_ids"
            eval="[
        (4, ref('fastapi.group_fastapi_endpoint_runner')),
        ]"
        />
    </record>

</odoo>
