<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="wizard_partner_auth_reset_password_view_form" model="ir.ui.view">
        <field name="model">wizard.partner.auth.reset.password</field>
        <field name="arch" type="xml">
            <form string="Label">
                An email will be send with a token to each customer, you can specify the date until the link is valid
                <group>
                    <field name="template_id" />
                    <field name="delay" />
                    <field
                        name="date_validity"
                        attrs="{'readonly': [('delay', '!=', 'manually')],
                                'required': [('delay', '=', 'manually')]}"
                    />
                </group>
                <footer>
                    <button
                        name="confirm"
                        string="Send Reset Password"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>

            </form>
        </field>
    </record>

    <record
        id="fastapi_auth_partner_action_reset_password"
        model="ir.actions.act_window"
    >
        <field name="name">Send Reset Password Instruction</field>
        <field name="res_model">wizard.partner.auth.reset.password</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_fastapi_auth_partner" />
        <field name="groups_id" eval="[(4, ref('group_partner_auth_manager'))]" />
    </record>

</odoo>
